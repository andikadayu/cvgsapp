<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".AboutActivity">
	
	<ScrollView
		 android:layout_width="match_parent"
		 android:layout_height="match_parent">
		
		<RelativeLayout
			 android:layout_width="match_parent"
			 android:layout_height="match_parent">
			
			
			<ImageView
				 android:id="@+id/logoApps"
				 android:layout_width="128dp"
				 android:layout_height="128dp"
				 android:layout_centerHorizontal="true"
				 android:layout_marginTop="120dp"
				 android:src="@mipmap/ic_cvgs"/>
			
			<TextView
				 android:id="@+id/nameApps"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:layout_below="@id/logoApps"
				 android:layout_centerHorizontal="true"
				 android:layout_marginTop="25dp"
				 android:text="@string/app_name"
				 android:textColor="@color/black"
				 android:textSize="20sp"/>
			
			<TextView
				 android:id="@+id/versionApps"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:layout_below="@id/nameApps"
				 android:layout_centerHorizontal="true"
				 android:layout_marginTop="5dp"
				 android:text="v 123"
				 android:textColor="@color/black"
				 android:textSize="16sp"/>
			
			<Button
				 android:id="@+id/btnToOpenLicense"
				 style="?android:attr/borderlessButtonStyle"
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:layout_below="@id/versionApps"
				 android:layout_marginTop="40dp"
				 android:backgroundTint="@color/white"
				 android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
				 android:text="Open Source License"
				 android:textAlignment="textStart"
				 android:textAllCaps="false"
				 android:textColor="@color/black"
				 android:textSize="18sp"
				 android:textStyle="normal"/>
		
		
		</RelativeLayout>
	
	</ScrollView>


</RelativeLayout>