<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:id="@+id/layoutOuter">
	
	<LinearLayout
		 android:id="@+id/lProfile"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:layout_alignParentStart="true"
		 android:orientation="vertical"
		 android:padding="2dp">
		
		<ImageView
			 android:id="@+id/imgBLoogo"
			 android:layout_width="75dp"
			 android:layout_height="75dp"
			 android:layout_gravity="center"
			 android:layout_marginLeft="2dp"
			 android:src="@drawable/ic_baseline_person_24"/>
	
	</LinearLayout>
	
	<LinearLayout
		 android:id="@+id/lDetail"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:layout_marginLeft="5dp"
		 android:layout_toLeftOf="@id/lImg"
		 android:layout_toRightOf="@id/lProfile"
		 android:orientation="vertical"
		 android:padding="2dp">
		
		<TextView
			 android:id="@+id/tvBJudul"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:text="@string/app_name"
			 android:textColor="@color/black"
			 android:textSize="16sp"
			 android:textStyle="bold"/>
		
		<TextView
			 android:id="@+id/tvBDetail"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:text="@string/app_name"
			 android:textColor="@color/black"
			 android:textSize="14sp"/>
		
		<TextView
			 android:id="@+id/tvBSisa"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:text="@string/app_name"
			 android:textColor="@color/red"
			 android:textSize="14sp"/>
	
	</LinearLayout>
	
	<LinearLayout
		 android:id="@+id/lImg"
		 android:layout_width="40dp"
		 android:layout_height="wrap_content"
		 android:layout_alignParentEnd="true"
		 android:orientation="vertical">
		
		<ImageView
			 android:layout_width="30dp"
			 android:layout_height="30dp"
			 android:layout_gravity="center"
			 android:layout_marginTop="20dp"
			 android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
	
	</LinearLayout>

</RelativeLayout>

